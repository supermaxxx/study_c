[01] 外部传入值并读取
1) scanf("%s",name);    //这个遇到空格就断
#include <stdio.h>
int main()
{
  char name[20];
  printf("Please enter your name: ");
  scanf("%s",name);
  printf("Your name is: %s\n", name);
  return 0;
}
2) gets    //这个很危险，容易溢出，一般不用
...
  gets(name);
...
3) fgets    //使用这个函数，比较安全
...
  fgets(name,20,stdin);
...

[02] switch...case语法
#include <stdio.h>
main()
{
  int in;
  char *out;
  scanf("%d",&in);
  switch(in)
  {
    case 0:out="success";break;
    case 1:out="fail";break;
    default:printf("data error");break;
  }
  printf("%s",out);
}

